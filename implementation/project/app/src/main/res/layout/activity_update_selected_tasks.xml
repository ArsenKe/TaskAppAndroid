<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.UpdateSelectedTasks">



    <LinearLayout
        android:id="@+id/status_update_layout_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp">

        <TextView
            android:id="@+id/txt_update_status_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status: "
            android:textColor="@color/black"
            android:textSize="20dp"
            android:width="140dp"
            android:textAlignment="viewEnd"
            android:layout_centerHorizontal="true" />

        <Spinner
            android:id="@+id/choose_update_statusSpinner_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:spinnerMode="dropdown"
            android:textAlignment="center"
            android:gravity="center"
            android:minWidth="140dp"/>
    </LinearLayout>

    <Button
        android:id="@+id/update_taskBtn_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/status_update_layout_id"
        android:layout_marginTop="20dp" />

</RelativeLayout>