<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.AddTaskView"
    android:id="@+id/container">

    <LinearLayout
        android:id="@+id/title_layout_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/title_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title: "
            android:textColor="@color/grey"
            android:textSize="20dp"
            android:width="140dp"
            android:textAlignment="viewEnd"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/txt_title_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:width="140dp"
            android:textAlignment="viewStart"
            android:layout_centerHorizontal="true" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/description_layout_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_layout_id"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="6dp"
        >

        <TextView
            android:id="@+id/description_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description: "
            android:textColor="@color/grey"
            android:textSize="20dp"
            android:width="140dp"
            android:textAlignment="viewEnd"
            android:layout_centerHorizontal="true"
            />

        <TextView
            android:id="@+id/txt_description_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:width="140dp"
            android:textAlignment="viewStart"
            android:layout_centerHorizontal="true"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/date_layout_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/description_layout_id"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="6dp">

        <TextView
            android:id="@+id/date_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date: "
            android:textColor="@color/grey"
            android:textSize="20dp"
            android:width="140dp"
            android:textAlignment="viewEnd"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/txt_date_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:width="140dp"
            android:textAlignment="viewStart"
            android:layout_centerHorizontal="true" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/time_layout_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/date_layout_id"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="6dp">

        <TextView
            android:id="@+id/time_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time: "
            android:textColor="@color/grey"
            android:textSize="20dp"
            android:width="140dp"
            android:textAlignment="viewEnd"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/txt_time_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:width="140dp"
            android:textAlignment="viewStart"
            android:layout_centerHorizontal="true" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/status_layout_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/time_layout_id"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="6dp">

        <TextView
            android:id="@+id/status_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status: "
            android:textColor="@color/grey"
            android:textSize="20dp"
            android:width="140dp"
            android:textAlignment="viewEnd"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/txt_status_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:width="140dp"
            android:textAlignment="viewStart"
            android:layout_centerHorizontal="true" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/notification_layout_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/status_layout_id"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="6dp">

        <TextView
            android:id="@+id/notification_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notification: "
            android:textColor="@color/grey"
            android:textSize="20dp"
            android:width="140dp"
            android:textAlignment="viewEnd"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/txt_notification_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:width="140dp"
            android:textAlignment="viewStart"
            android:layout_centerHorizontal="true" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/notify_layout_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/notification_layout_id"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="6dp">

        <TextView
            android:id="@+id/notify_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notify before: "
            android:textColor="@color/grey"
            android:textSize="20dp"
            android:width="140dp"
            android:textAlignment="viewEnd"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/txt_notify_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:width="140dp"
            android:textAlignment="viewStart"
            android:layout_centerHorizontal="true" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/color_layout_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/notify_layout_id"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="6dp">

        <TextView
            android:id="@+id/color_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Color: "
            android:textColor="@color/grey"
            android:textSize="20dp"
            android:width="140dp"
            android:textAlignment="viewEnd"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/txt_color_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:width="140dp"
            android:textAlignment="viewStart"
            android:layout_centerHorizontal="true" />

    </LinearLayout>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/color_layout_id"
        tools:context=".MainActivity">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/check_list_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:listitem="@layout/todo_item" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</RelativeLayout>
